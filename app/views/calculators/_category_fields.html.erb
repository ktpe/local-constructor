<div class="p-4 mb-4 border rounded-lg nested-fields">
  <%= f.input :name, label: "Category Name:", input_html: { class: "border rounded p-2 w-full" }, label_html: { class: "font-semibold" } %>
  <%= f.input :price, label: "Category Price:", input_html: { class: "border rounded p-2 w-full", type: "number", step: "0.01" }, label_html: { class: "font-semibold" } %>
  <%= link_to_remove_association "Remove Category", f, class: "text-red-500 hover:text-red-700 underline mt-2 inline-block" %>
</div>
